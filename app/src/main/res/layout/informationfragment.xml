<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"

    android:background="#213C44">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold">
        </TextView>
        <ImageButton
            android:id="@+id/btn_img_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_marginLeft="200dp"
            android:backgroundTint="@color/bacgroundworkout"
            android:src="@drawable/baseline_settings_24">
        </ImageButton>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblue"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/layout_metrics"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_health_and_safety_24"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metrics_health"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/darkblue"
                android:scaleType="centerInside"
                android:layout_marginLeft="195dp"
                android:src="@drawable/baseline_arrow_forward_ios_24">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblue"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/layout_fitness"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_question_mark_24"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitness_exercise_guide"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/darkblue"
                android:scaleType="centerInside"
                android:layout_marginLeft="145dp"
                android:src="@drawable/baseline_arrow_forward_ios_24">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblue"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/layout_customer"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_feedback_24"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Support"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/darkblue"
                android:scaleType="centerInside"
                android:layout_marginLeft="185dp"
                android:src="@drawable/baseline_arrow_forward_ios_24">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblue"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/layout_term"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_text_snippet_24"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term_condition"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/darkblue"
                android:scaleType="centerInside"
                android:layout_marginLeft="192dp"
                android:src="@drawable/baseline_arrow_forward_ios_24">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblue"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/layout_logout"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/darkblue"
                android:scaleType="centerInside"
                android:layout_marginLeft="250dp"
                android:src="@drawable/baseline_arrow_forward_ios_24">
            </ImageButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>