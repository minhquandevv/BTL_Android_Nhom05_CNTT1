<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#213C44"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#213C44"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Workout"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:background="@drawable/setting">

        </Button>


    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln1"
        android:gravity="left|center_horizontal"
        android:paddingTop="15dp"
        android:layout_marginStart="20dp"

        android:text="Daily"
        android:textColor="@color/white"
        android:textSize="20dp">


    </TextView>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginStart="16dp"
        android:paddingBottom="10dp"
        android:text="Daily workout routines"
        android:textColor="@color/grey"
        android:textSize="10dp">

    </TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc1"
        android:layout_width="365dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rc1"
        android:layout_marginStart="20dp"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv5"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/corner"
            android:padding="5dp"
            android:text="Hoàn thành: 0/0 bài tập"
            android:textColor="#0A3C3C"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/tv6"
            android:background="@drawable/corner"
            android:padding="5dp"
            android:text="Calo: 0/0 calo"
            android:textColor="#0A3C3C"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/tv7"
            android:background="@drawable/corner"
            android:padding="5dp"
            android:textColor="#0A3C3C"
            android:textSize="14dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc2"
        android:layout_width="365dp"
        android:layout_height="351dp"
        android:layout_below="@+id/tv5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>